{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "*react*"
    ]
  },
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".d.ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "no-return-await": "off",
      "import/prefer-default-export": "off",
      "no-useless-concat": "off",
      "no-console": "off",
      "import/no-extraneous-dependencies": "off",
      "import/extensions": "off",
      "prettier/prettier": [
        "error"
      ],
      "quotes": [
        "error",
        "backtick"
      ]
    },
    "ignorePatterns": [
      "node_modules"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "lerna run ci",
      "lerna run cy:run"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lerna run precommit --parallel --stream",
      "post-commit": "git push"
    }
  },
  "scripts": {
    "release": "standard-version --parallel --stream",
    "build": "lerna run build --parallel --stream",
    "ci": "lerna run ci --parallel --stream",
    "test": "lerna run test --parallel --stream",
    "start": "lerna run start --parallel --stream",
    "format": "lerna run format --parallel --stream"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/axios": "^0.14.0",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.26",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-loader": "8.1.0",
    "commitizen": "^4.2.3",
    "commitlint": "^11.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "standard-version": "^9.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv-safe": "^8.2.0",
    "uuid": "^8.3.2",
    "yup": "^0.32.8"
  }
}
